<idea-plugin>
    <id>org.endpointdeps.EndpointDependencies</id>
    <name>Tree Of Usages</name>
    <vendor email="timur.mukhatov@gmail.com" url="https://www.linkedin.com/in/timur-mukhatov/">Timur Mukhatov</vendor>
    <version>1.3</version>

    <idea-version since-build="162.1889" />

    <description><![CDATA[
    Replaced by description.html ...............................................
    ............................................................................
    ]]></description>

    <change-notes><![CDATA[
    Replaced by change-notes.html ..............................................
    ............................................................................
    ]]></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Tree Of Usages" icon="AllIcons.Actions.Refresh" anchor="right" factoryClass="myToolWindow.MyToolWindowFactory"/>
    </extensions>

    <actions>
        <action id="myToolWindow.Actions.FindUsagesAction" class="myToolWindow.Actions.FindUsagesAction" text="Build A Tree Of Usages"/>
        <action id="myToolWindow.Actions.StopFindUsagesAction" class="myToolWindow.Actions.StopFindUsagesAction" text="Stop Building A Tree Of Usages"/>
        <action id="myToolWindow.Actions.ExpandTreeAction" class="myToolWindow.Actions.ExpandTreeAction" text="Expand All"/>
        <action id="myToolWindow.Actions.CollapseTreeAction" class="myToolWindow.Actions.CollapseTreeAction" text="Collapse All"/>
    </actions>
</idea-plugin>